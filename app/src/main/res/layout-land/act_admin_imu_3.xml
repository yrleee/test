<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/widebg_02"
    android:orientation="vertical">

    <LinearLayout

       android:layout_width="fill_parent"
        android:layout_height="280dp"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:paddingRight="45dp"
        android:paddingLeft="45dp">
        <LinearLayout
            android:padding="10dp"

            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/rtv_a"
                android:layout_width="0dp"
                android:layout_height="fill_parent"

                android:layout_weight="5"
                android:background="@drawable/rtv_a0001"/>
        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/rtv_b"
                android:layout_width="0dp"
                android:layout_height="fill_parent"

                android:layout_weight="5"
                android:background="@drawable/rtv_b0001"/>
        </LinearLayout>

        <LinearLayout
            android:padding="10dp"

            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rtv_c"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:background="@drawable/rtv_c0001"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:paddingRight="45dp"
        android:paddingLeft="45dp">

        <LinearLayout
            android:paddingRight="20dp"
            android:paddingLeft="45dp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <CheckBox
                android:id="@+id/cb_rtv_a"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/check_checkbox"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="5"
                android:background="@drawable/rtvtxt_01"/>
        </LinearLayout>

        <LinearLayout
            android:paddingRight="35dp"
            android:paddingLeft="30dp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
           >
            <CheckBox
                android:id="@+id/cb_rtv_b"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/check_checkbox"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="5"
                android:background="@drawable/rtvtxt_02"/>
        </LinearLayout>

        <LinearLayout
            android:paddingRight="15dp"
            android:paddingLeft="50dp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_rtv_c"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/check_checkbox"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="5"
                android:background="@drawable/rtvtxt_03"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
