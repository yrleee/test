<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_img04"
    android:orientation="vertical"
    tools:context=".Home.Act_Rehab_Pre" >

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="165dp"
        android:gravity="bottom">

        <ImageView
            android:id="@+id/context_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/context_walk"
            android:layout_centerVertical="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="11">

        <RelativeLayout
            android:layout_marginTop="2dp"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/count_now"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:maxLength="2"
                android:background="@null"
                android:gravity="center"
                android:text="00"
                android:textSize="30dp"
                android:layout_toLeftOf="@+id/count_center" />
            <TextView
                android:id="@+id/count_center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:text=" / "
                android:textSize="25dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/count_total"
                android:background="@null"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:maxLength="2"
                android:inputType="number"
                android:gravity="center"
                android:text="00"
                android:textSize="30dp"
                android:layout_toRightOf="@+id/count_center" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/bg_context"

            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:layout_marginTop="20dp"
            android:layout_weight="6"
            android:layout_marginBottom="40dp"
            android:src="@drawable/conico_walk"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:id="@+id/battery_bglayout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/black"
            android:gravity="center_vertical">
                />
            <ImageView
                android:id="@+id/battery_left"
                android:layout_width="33dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/ico_bat01"
                android:background="@android:color/transparent"
                />

            <ImageView
                android:id="@+id/battery_energy"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="373dp"

                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/battery_energy"
                />

        </LinearLayout>

        <ImageButton
            android:id="@+id/start_button"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/bt_start_nor"/>
    </LinearLayout>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/bottom_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"

            android:src="@drawable/cellumed_logo"
            android:layout_centerVertical="true" />

    </LinearLayout>

</LinearLayout>
