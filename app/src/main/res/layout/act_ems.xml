<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_img01"
    android:orientation="vertical"
    tools:context=".Home.Act_EMS" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:weightSum="11">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="4.5"
            >
            <ImageView
                android:id="@+id/screenImage"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/img_stepbox"
                android:layout_weight="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingLeft="70dp"
                android:text="자극타입"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/signal_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingLeft="150dp"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="40dp"
                android:paddingLeft="70dp"
                android:text="주파수"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/frequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="40dp"
                android:paddingLeft="150dp"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="15dp"
               />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="65dp"
                android:paddingLeft="70dp"
                android:text="동작시간"
                android:textColor="#ffffff"
                android:textSize="15dp"

                android:visibility="gone"/>
            <TextView
                android:id="@+id/working_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="65dp"
                android:paddingLeft="150dp"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="15dp"

                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="90dp"
                android:paddingLeft="70dp"
                android:text="자극시간"
                android:textColor="#ffffff"
                android:textSize="15dp"

                android:visibility="gone"/>
            <TextView
                android:id="@+id/pulse_op_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="90dp"
                android:paddingLeft="150dp"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="15dp"
               />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="115dp"
                android:paddingLeft="70dp"
                android:text="휴지시간"
                android:textColor="#ffffff"
                android:textSize="15dp"

                android:visibility="gone"/>

            <TextView
                android:id="@+id/pulse_pause_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="115dp"
                android:paddingLeft="150dp"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="15dp"

                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="140dp"
                android:paddingLeft="70dp"
                android:text="상승시간"
                android:textColor="#ffffff"
                android:textSize="15dp"

                android:visibility="gone"/>
            <TextView
                android:id="@+id/pulse_rising_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="140dp"
                android:paddingLeft="150dp"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="15dp"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="165dp"
                android:paddingLeft="70dp"
                android:text="펄스폭"
                android:textColor="#ffffff"
                android:textSize="15dp"

                android:visibility="gone"/>
            <TextView
                android:id="@+id/pulse_width"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="165dp"
                android:paddingLeft="150dp"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="15dp"
           />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/timebar_bg">
            <TextView
                android:id="@+id/time_minute"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:textColor="#c3edfe"
                android:maxLength="2"
                android:background="@null"
                android:gravity="center"
                android:text="00"
                android:textSize="30dp"
                android:layout_toLeftOf="@+id/time_center" />
            <TextView
                android:id="@+id/time_center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#c3edfe"
                android:text=" : "
                android:textSize="25dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/time_second"
                android:background="@null"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:textColor="#c3edfe"
                android:maxLength="2"
                android:inputType="number"
                android:gravity="center"
                android:text="00"
                android:textSize="30dp"
                android:layout_toRightOf="@+id/time_center" />
        </RelativeLayout>

        <ListView
            android:id="@+id/listview1"
            tools:listitem="@layout/custom_listview_item"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="3.7"
            ></ListView>
        <LinearLayout
            android:id="@+id/battery_bglayout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:orientation="horizontal"
            android:background="@color/black"
            android:gravity="center_vertical">
            />
            <ImageView
                android:id="@+id/battery_left"
                android:layout_width="33dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/ico_bat01"
                android:background="@android:color/transparent"
                />

            <ImageView
                android:id="@+id/battery_energy"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="373dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/battery_energy"
                />

        </LinearLayout>

        <ImageButton
            android:id="@+id/start_button"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/bt_start_nor"/>
    </LinearLayout>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/bottom_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"

            android:src="@drawable/cellumed_logo"
            android:layout_centerVertical="true" />

    </LinearLayout>

</LinearLayout>
