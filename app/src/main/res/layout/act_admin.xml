<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_img03"
    android:orientation="vertical"
    tools:context=".Home.Act_Rehab_Home">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"></LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2.35"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="40dp"
        android:paddingRight="45dp">

         <ImageButton
                android:id="@+id/bt_gait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/program"
                android:onClick="go_ems"
                android:scaleType="fitXY"
                android:src="@drawable/bt_ems_nor"
                android:layout_centerVertical="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2.35"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="40dp"
        android:paddingRight="45dp">

        <ImageButton
            android:id="@+id/bt_squat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/program"
            android:onClick="go_emg"
            android:scaleType="fitXY"
            android:src="@drawable/bt_emg_nor"
            android:layout_centerVertical="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2.35"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="40dp"
        android:paddingRight="45dp">

        <ImageButton
            android:id="@+id/bt_stairs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/program"
            android:onClick="go_imu"
            android:scaleType="fitXY"
            android:src="@drawable/bt_imu_nor"
            android:layout_centerVertical="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3.3"></LinearLayout>
    <LinearLayout

       android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/bottom_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"

            android:src="@drawable/cellumed_logo"
            android:layout_centerVertical="true" />

    </LinearLayout>

</LinearLayout>
