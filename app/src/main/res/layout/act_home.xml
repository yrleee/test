<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_img02"
    android:orientation="vertical"
    tools:context=".Home.Act_Home">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2.15"></LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:orientation="horizontal"
        android:paddingLeft="35dp"
        android:paddingRight="35dp">

        <RelativeLayout
            android:id="@+id/rl_program"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/bt_program"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent"
                android:contentDescription="@string/program"
                android:onClick="rehab_home"
                android:scaleType="fitXY"
                android:src="@drawable/bt_main01_nor"
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_datalog"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/bt_datalog"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent"
                android:contentDescription=""
                android:onClick="go_history"
                android:scaleType="fitXY"
                android:src="@drawable/bt_main02_nor"
                android:layout_centerVertical="true" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:orientation="horizontal"
        android:paddingLeft="33dp"
        android:paddingRight="33dp">

        <RelativeLayout
            android:id="@+id/rl_admin"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/bt_admin"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent"
                android:contentDescription="@string/program"
                android:onClick="go_admin"
                android:scaleType="fitXY"
                android:src="@drawable/bt_main03_nor"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_setting"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/bt_setting"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent"
                android:contentDescription="@string/setting"
                android:onClick="setting"
                android:scaleType="fitXY"
                android:src="@drawable/bt_main04_nor"
                android:layout_centerVertical="true" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2.57"></LinearLayout>
    <LinearLayout

       android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/bottom_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"

            android:src="@drawable/cellumed_logo"
            android:layout_centerVertical="true" />

    </LinearLayout>

</LinearLayout>
